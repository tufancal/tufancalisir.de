---
import "../styles.css";
import { useStoryblokApi } from "@storyblok/astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
import type { JSONLDSchema } from "@/src/utils/jsonld";
import { schemaToJson } from "@/src/utils/jsonld";

interface Props {
  seoPage: {
    title: string;
    description: string;
  };
  jsonld?: JSONLDSchema;
  noindex?: boolean;
}

const storyblokApi = useStoryblokApi();

let seo, header, footer;

try {
  const [seoData, footerData, headerData] = await Promise.all([
    storyblokApi.get("cdn/stories/global/seo", {
      version: import.meta.env.DEV ? "draft" : "published",
    }),
    storyblokApi.get("cdn/stories/global/footer", {
      version: import.meta.env.DEV ? "draft" : "published",
    }),
    storyblokApi.get("cdn/stories/global/header", {
      version: import.meta.env.DEV ? "draft" : "published",
    }),
  ]);

  seo = seoData.data.story.content;
  header = headerData.data.story.content;
  footer = footerData.data.story.content;
} catch (error) {
  console.error("Error fetching global content from Storyblok:", error);
  throw new Error(
    "Failed to load global content. Please check your Storyblok connection.",
  );
}

const canonicalUrl = Astro.url.origin + Astro.url.pathname;
const { seoPage, jsonld, noindex } = Astro.props;
---

<!doctype html>
<html data-theme="nearanimal" lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />
    <title>{seoPage.title} | {seo.siteName}</title>
    <meta name="description" content={seoPage.description} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    <link rel="canonical" href={canonicalUrl} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta property="og:title" content={`${seoPage.title} | ${seo.siteName}`} />
    <meta property="og:description" content={seoPage.description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content={seo.siteName} />
    <meta property="og:image" content={seo.ogImage.filename} />
    <meta name="twitter:title" content={`${seoPage.title} | ${seo.siteName}`} />
    <meta name="twitter:description" content={seoPage.description} />
    <meta name="twitter:image" content={seo.ogImage.filename} />
    <meta name="twitter:card" content="summary_large_image" />
    {
      import.meta.env.DEV && (
        <link rel="preconnect" href="https://app.storyblok.com" />
      )
    }
    <link
      rel="preload"
      href="/fonts/subset-Hind-SemiBold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
      fetchpriority="high"
    />
    <link
      rel="preload"
      href="/fonts/subset-Hind-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/subset-Hind-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/subset-Cardo-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/subset-Cardo-Italic.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    {jsonld && <script type="application/ld+json" is:inline set:html={schemaToJson(jsonld)} />}
  </head>
  <body class="bg-gallery">
    <StoryblokComponent blok={header} />
    <main>
      <slot />
    </main>
    <StoryblokComponent blok={footer} />
  </body>
</html>
